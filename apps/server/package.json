{
  "name": "server",
  "version": "1.0.0",
  "description": "Server application",
  "main": "index.js",
  "keywords": [],
  "author": "√çcaro Ribeiro",
  "license": "ISC",
  "scripts": {
    "lint": "eslint ./src",
    "fix:lint": "eslint --fix ./src",
    "format": "prettier --write ./src",
    "test": "jest --coverage",
    "gen:swagger": "tsoa spec",
    "gen:routes": "tsoa routes",
    "watch:dist": "npm-run-all -s gen:swagger gen:routes && rollup -c rollup.config.mjs --watch --environment NODE_ENV:development,PORT:5001",
    "pre:build": "rimraf dist && mkdir dist",
    "make:bundle": "rollup -c rollup.config.mjs --environment NODE_ENV:production",
    "build": "npm-run-all -s gen:swagger gen:routes pre:build make:bundle",
    "gen:devmigration": "dotenv -v NODE_ENV=development -- drizzle-kit generate --config ./src/db/db-config.ts",
    "gen:migration": "dotenv -v NODE_ENV=production -- drizzle-kit generate --config ./src/db/db-config.ts",
    "run:devmigration": "dotenv -v NODE_ENV=development -- drizzle-kit migrate --config ./src/db/db-config.ts",
    "run:migration": "dotenv -v NODE_ENV=production -- drizzle-kit migrate --config ./src/db/db-config.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-run": "^3.1.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tsoa/runtime": "^6.4.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.2",
    "@types/swagger-ui-express": "^4.1.6",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "rollup": "^4.21.0",
    "rollup-plugin-dotenv": "^0.5.1",
    "ts-jest": "^29.2.5",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "express": "^4.19.2",
    "http-status": "^1.7.4",
    "postgres": "^3.4.4",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0",
    "tsyringe": "^4.8.0"
  }
}
