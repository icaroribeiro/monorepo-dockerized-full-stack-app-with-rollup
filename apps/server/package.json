{
  "name": "server",
  "version": "1.0.0",
  "description": "Server application",
  "main": "index.js",
  "keywords": [],
  "author": "√çcaro Ribeiro",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "format": "prettier --write ./src",
    "test": "vitest --run --coverage",
    "test:watch": "vitest",
    "swagger:generate": "tsoa spec",
    "routes:generate": "tsoa routes",
    "migr:generate": "dotenv -v NODE_ENV=development -- drizzle-kit generate --config ./db/db-config.ts",
    "db:migrate": "dotenv -v NODE_ENV=development -- drizzle-kit migrate --config ./db/db-config.ts",
    "start:dev": "pnpm swagger:generate && pnpm routes:generate && pnpm vite-node --watch --mode development ./src/index.ts",
    "pre:build": "rimraf dist && mkdir dist",
    "make:bundle": "tsc -b && vite build --mode production",
    "build": "pnpm swagger:generate && pnpm routes:generate && pnpm pre:build && pnpm make:bundle"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@tsoa/runtime": "^6.4.0",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@vitest/coverage-v8": "^2.0.5",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "magic-string": "^0.30.11",
    "rimraf": "^6.0.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "swagger-ui-dist": "^5.17.14",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "vite": "^5.4.3",
    "vite-node": "^2.0.5",
    "vite-plugin-commonjs": "^0.10.1",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vite-plugin-filter-replace": "^0.1.13",
    "vite-plugin-replace": "^0.1.1",
    "vite-plugin-require": "^1.1.14",
    "vite-plugin-require-transform": "^1.0.21",
    "vite-plugin-static-copy": "^1.0.6",
    "vite-plugin-transform": "^2.0.1",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "express": "^4.19.2",
    "http-status": "^1.7.4",
    "postgres": "^3.4.4",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0",
    "tsyringe": "^4.8.0"
  }
}
