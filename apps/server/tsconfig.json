{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "noEmit": true,

    /* Linting */
    "strict": true,

    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "db/**/*.ts", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
