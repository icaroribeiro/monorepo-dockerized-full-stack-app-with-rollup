{
  "name": "@monorepo/datastore",
  "version": "1.0.0",
  "description": "Datastore",
  "main": "index.js",
  "keywords": [],
  "author": "√çcaro Ribeiro",
  "license": "ISC",
  "scripts": {
    "lint": "eslint ./src",
    "fix:lint": "eslint --fix ./src",
    "format": "prettier --write ./src",
    "test": "jest --coverage",
    "watch:dist": "rollup -c rollup.config.mjs --watch --environment NODE_ENV:development,PORT=5002",
    "pre:build": "rimraf dist && mkdir dist",
    "make:bundle": "rollup -c rollup.config.mjs --environment NODE_ENV:production",
    "build": "npm-run-all -s pre:build make:bundle",
    "setup:devenv": "dotenv -e ./.env.development -- ",
    "gen:devmigration": "pnpm setup:devenv drizzle-kit generate --config ./src/config/config.ts",
    "run:devmigration": "pnpm setup:devenv drizzle-kit migrate --config ./src/config/config.ts",
    "studio:dev": "pnpm setup:devenv drizzle-kit studio --config ./src/config/config.ts --host 127.0.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-run": "^3.1.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.2",
    "@types/pg": "^8.11.8",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "rollup": "^4.21.0",
    "rollup-plugin-dotenv": "^0.5.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "postgres": "^3.4.4"
  }
}
